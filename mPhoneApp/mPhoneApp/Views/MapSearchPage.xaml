<?xml version="1.0" encoding="utf-8" ?>
    
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
             x:Class="mPhoneApp.Views.MapSearchPage">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="EntryName"></Entry>
            <Label Text="Latitude" Margin="0,24,0,0"
                  />
            <Entry Keyboard="Numeric" Text="47.603230" x:Name="EntryLatitude"></Entry>
            <Label Text="Longitude"              />
            <Entry Keyboard="Numeric" Text="-122.330276" x:Name="EntryLongitude"></Entry>
            <Button Text="open" x:Name="buttonopen" Clicked="buttonopen_Clicked"></Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>